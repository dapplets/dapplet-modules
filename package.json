{
  "name": "typescript-examples",
  "version": "1.0.0",
  "description": "",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "npm-run-all --parallel serve watch",
    "watch": "npm-run-all --parallel watch:1 watch:2 watch:3 watch:4",
    "serve": "http-server ./dist",
    "build": "npm run build:1 && npm run build:2 && npm run build:3 && npm run build:4",

    "watch:1": "watchify src/CommonLib/index.ts -p [ tsify -p src/CommonLib ] -v -o dist/CommonLib.js",
    "watch:2": "watchify src/TwitterAdapter/index.ts -p [ tsify -p src/TwitterAdapter ] -v -o dist/TwitterAdapter.js",
    "watch:3": "watchify src/TwitterFeature/index.ts -p [ tsify -p src/TwitterFeature ] -v -o dist/TwitterFeature.js",
    "watch:4": "watchify src/TwitterFeature2/index.ts -p [ tsify -p src/TwitterFeature2 ] -v -o dist/TwitterFeature2.js",

    "build:1": "browserify src/CommonLib/index.ts -p [ tsify -p src/CommonLib ] > dist/CommonLib.js",
    "build:2": "browserify src/TwitterAdapter/index.ts -p [ tsify -p src/TwitterAdapter ] > dist/TwitterAdapter.js",
    "build:3": "browserify src/TwitterFeature/index.ts -p [ tsify -p src/TwitterFeature ] > dist/TwitterFeature.js",
    "build:4": "browserify src/TwitterFeature2/index.ts -p [ tsify -p src/TwitterFeature2 ] > dist/TwitterFeature2.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dapplets/typescript-examples.git"
  },
  "author": "Dapplets Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dapplets/typescript-examples/issues"
  },
  "homepage": "https://github.com/dapplets/typescript-examples#readme",
  "devDependencies": {
    "browserify": "^16.2.3",
    "http-server": "^0.11.1",
    "npm-run-all": "^4.1.5",
    "tsify": "^4.0.1",
    "typescript": "^3.4.5",
    "watchify": "^3.11.1"
  }
}
