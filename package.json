  "scripts": {
    "start": "npm-run-all --parallel serve watch",
    "watch": "npm-run-all --parallel watch:1 watch:2 watch:3 watch:4",
    "serve": "http-server ./dist",
    "build": "npm run build:1 && npm run build:2 && npm run build:3 && npm run build:4",

    "watch:1": "tsc -w -p ./src/TwitterAdapter",
    "watch:2": "tsc -w -p ./src/TwitterFeature",
    "watch:3": "tsc -w -p ./src/TwitterFeature2",
    "watch:4": "tsc -w -p ./src/CommonLib",

    "build:1": "tsc -p ./src/TwitterAdapter",
    "build:2": "tsc -p ./src/TwitterFeature",
    "build:3": "tsc -p ./src/TwitterFeature2",
    "build:4": "tsc -p ./src/CommonLib"

  },
