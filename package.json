{
  "private": true,
  "name": "dapplet-modules",
  "version": "0.1.0",
  "description": "Examples of modules for Dapplet Extension",
  "author": "Dapplets Team",
  "license": "MIT",
  "keywords": [
    "dapplets",
    "ethereum"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "npm-run-all --parallel serve watch",
    "ls": "lerna ls",
    "postinstall": "lerna bootstrap",
    "build": "lerna run build",
    "watch": "lerna exec --parallel -- npm run watch",
    "serve": "node src/server/index.js",
    "clean": "lerna run clean",
    "clean:node_modules": "lerna exec -- if exist node_modules rd /q /s node_modules",
    "clean:package_lock": "lerna exec -- if exist package-lock.json del /f package-lock.json",
    "clean:self:node_modules": "if exist node_modules rd /q /s node_modules",
    "clean:self:package_lock": "if exist package-lock.json del /f package-lock.json",
    "clean:all": "npm run clean && npm run clean:node_modules && npm run clean:package_lock && npm run clean:self:node_modules && npm run clean:self:package_lock",
    "deploy": "lerna exec --concurrency 1 -- dapplet deploy",
    "deploy:archive": "lerna exec --concurrency 1 -- dapplet deploy --archive",
    "deployswarm": "lerna exec --concurrency 1 -- dapplet deploy --swarm",
    "deployswarm:archive": "lerna exec --concurrency 1 -- dapplet deploy --swarm --archive",
    "create": "node src/copyTemplate.js",
    "linktypes": "lerna exec -- npm link @dapplets/dapplet-extension"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dapplets/typescript-examples.git"
  },
  "bugs": {
    "url": "https://github.com/dapplets/typescript-examples/issues"
  },
  "homepage": "https://github.com/dapplets/typescript-examples#readme",
  "devDependencies": {
    "before-build-webpack": "^0.2.9",
    "chalk": "^4.0.0",
    "copy-webpack-plugin": "^6.0.1",
    "ejs": "^3.1.3",
    "inquirer": "^7.1.0",
    "lerna": "^3.22.0",
    "npm-run-all": "^4.1.5",
    "shelljs": "^0.8.4",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.3",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2",
    "yargs": "^15.3.1"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "https": "^1.0.0"
  }
}
